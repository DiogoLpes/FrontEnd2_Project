generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String   // Importante para o Login
  role      String   @default("USER") // Para depois separares o Admin
  phone     String?
  plate     String?
  vehicles  Vehicle[]
  createdAt DateTime @default(now())
}

model Vehicle {
  id        Int      @id @default(autoincrement())
  brand     String   // Marca
  model     String   // Modelo
  plate     String   @unique // Matrícula
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   Int
  services  Service[]
}

model Service {
  id          Int      @id @default(autoincrement())
  type        String   // Pneus, Revisão, etc
  description String?  // O "Outro" que o user escreveu
  date        DateTime
  status      String   @default("PENDENTE") // PENDENTE, EM_REPARACAO, CONCLUIDO
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId   Int
}